<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/relLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnDiscover"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor2"
                android:onClick="addMedicalEntry"
                android:padding="12dp"
                android:text="DISCOVER"
                android:textColor="@color/textColor2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEnableDiscoverable"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/btnDiscover"
                android:background="@color/primaryColor2"
                android:onClick="addMedicalEntry"
                android:padding="12dp"
                android:text="ENABLE DISCOVERABLE"
                android:textColor="@color/textColor2"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="20dp"
            android:text="Please connect to your patient"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/lvNewDevices"
            android:layout_width="wrap_content"
            android:layout_height="202dp"
            android:layout_below="@id/relLayoutBottom"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:id="@+id/relLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/primaryColor1"
                android:onClick="addMedicalEntry"
                android:padding="12dp"
                android:text="CONNECT"
                android:textColor="@color/textColor2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBluetoothOnOff"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/btnConnect"
                android:background="@color/primaryColor2"
                android:onClick="addMedicalEntry"
                android:padding="12dp"
                android:text="BLUETOOTH ON/OFF"
                android:textColor="@color/textColor2"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>